{
  "name": "microsoft-kiota",
  "displayName": "Microsoft Kiota",
  "description": "REST API client generator based on OpenAPI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kiota-openapi-explorer",
          "title": "Kiota OpenAPI Explorer",
          "icon": "media/openapi.svg"
        }
      ]
    },
    "views": {
     "kiota-openapi-explorer": [
      {
        "id": "openApiExplorer",
        "name": "Kiota OpenAPI Explorer",
        "icon": "media/openapi.svg",
        "contextualTitle": "OpenAPI Explorer"
      }
     ],
     "explorer": [
      {
        "id": "jsonOutline",
        "name": "Json Outline",
        "when": "jsonOutlineEnabled"
      }
     ]
    },
    "commands": [
      {
        "command": "microsoft-kiota.updateClients",
        "title": "Kiota: update API clients in the current workspace"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "vscode-jsonrpc": "^8.1.0"
  }
}
